        character:FindFirstChildOfClass("Humanoid").Died:Connect(function()
            toggle = false
            button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            button.Text = "ğŸ”´ [ ATB1 ] ğŸ”´"
        end)
        
        -- Ø§Ù„Ù†Ø²ÙˆÙ„ Ø¨Ø³Ø±Ø¹Ø© 1,000,000
        while toggle do
